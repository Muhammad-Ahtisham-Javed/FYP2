<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    style="@style/myapp_style_activity_margin">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        android:id="@+id/imgV_hostel_list_item"/>

    <TextView
        style="@style/myapp_style_tv_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_name_hostel_list_item"
        android:paddingLeft="10dp"
        android:paddingTop="8dp"
        android:textStyle="bold|italic"
        android:textSize="20dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/imgV_hostel_list_item"/>


    <TextView
        style="@style/myapp_style_tv_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_location_hostel_list_item"
        android:layout_below="@id/tv_name_hostel_list_item"
        android:layout_toRightOf="@id/imgV_hostel_list_item"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="8dp"
        android:textSize="15dp"/>

    <TextView
        style="@style/myapp_style_tv_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_type_hostel_list_item"
        android:layout_below="@id/tv_location_hostel_list_item"
        android:layout_toRightOf="@id/imgV_hostel_list_item"
        android:paddingLeft="10dp"
        android:paddingTop="8dp"
        android:textSize="15dp"/>

</RelativeLayout>